{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "target": "es5",
    "lib": ["es2017", "dom"]
  },
  "include": ["./packages/**/*"],
  "exclude": ["ist", "build", "node_modules"]
}
