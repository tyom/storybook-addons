{
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "watch": "lerna run watch --parallel",
    "test": "yarn examples:build && yarn test:lint && yarn test:unit && yarn test:e2e",
    "test:lint": "eslint --ext .js,.jsx,.json,.html,.ts,.tsx,.mjs .",
    "test:unit": "jest",
    "test:e2e": "testcafe chrome:headless test/e2e/*.test.js --app 'yarn examples:serve'",
    "storybooks": "lerna run storybook --parallel",
    "examples": "yarn examples:build && yarn examples:serve",
    "examples:build": "lerna run build-storybook",
    "examples:serve": "http-server examples/build -p 5000",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@storybook/eslint-config-storybook": "^2.4.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "26.0.1",
    "babel-loader": "8.1.0",
    "babel-preset-vue": "2.0.2",
    "del-cli": "^3.0.1",
    "eslint": "^7.1.0",
    "eslint-plugin-testcafe": "^0.2.1",
    "http-server": "0.12.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.6",
    "prettier": "2.0.5",
    "testcafe": "^1.8.5",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn test:lint --fix",
      "git add"
    ]
  },
  "name": "storybook-addons-dev"
}
